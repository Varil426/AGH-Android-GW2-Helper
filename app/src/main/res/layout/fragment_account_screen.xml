<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/constraintLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.main.PlaceholderFragment">

    <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout" android:text="Account"/>
    <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/account_name_label"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/account_name_text_view"
            app:layout_constraintStart_toEndOf="@+id/account_name_label" android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp"/>

    <TextView
            android:text="Age:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/age_label"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/age_text_view"
            app:layout_constraintStart_toEndOf="@+id/age_label"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="128dp"
            android:layout_marginStart="32dp"/>

    <TextView
            android:text="Fractal level:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/fractal_level_label"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="192dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/fractal_level_text_view"
            app:layout_constraintStart_toEndOf="@+id/fractal_level_label"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="192dp"
            android:layout_marginStart="32dp"/>

    <TextView
            android:text="World vs World level:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wvw_level_label"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="256dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wvw_level_text_view"
            app:layout_constraintStart_toEndOf="@+id/wvw_level_label"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="256dp"
            android:layout_marginStart="32dp"/>

    <TextView
            android:text="Guilds:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guilds_label"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="330dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/guilds_text_view"
            app:layout_constraintStart_toEndOf="@+id/guilds_label" android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="330dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>