<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/cagliostro_font"
                    android:layout_height="wrap_content" android:id="@+id/equipmentNameTextView"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"/>
            <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp" app:srcCompat="@android:drawable/stat_sys_download"
                    android:id="@+id/equipmentIconImageView"
                    app:layout_constraintTop_toBottomOf="@+id/equipmentNameTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="10dp"/>
            <TextView
                    android:text="Slot:"
                    android:fontFamily="@font/cagliostro_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/equipmentSlotLabel"
                    app:layout_constraintStart_toEndOf="@+id/equipmentIconImageView" android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"/>
            <TextView
                    android:text="Level:"
                    android:fontFamily="@font/cagliostro_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/equipmentLevelLabel"
                    app:layout_constraintStart_toEndOf="@+id/equipmentIconImageView" android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/equipmentSlotLabel"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/cagliostro_font"
                    android:layout_height="wrap_content" android:id="@+id/equipmentSlotTextView"
                    app:layout_constraintStart_toEndOf="@+id/equipmentSlotLabel"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="10dp"
                    android:layout_marginTop="40dp"/>
            <TextView
                    android:fontFamily="@font/cagliostro_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/equipmentLevelTextView"
                    app:layout_constraintStart_toEndOf="@+id/equipmentLevelLabel"
                    app:layout_constraintTop_toTopOf="@+id/equipmentLevelLabel" android:layout_marginStart="10dp"
            />
            <TextView
                    android:text="Attributes:"
                    android:fontFamily="@font/cagliostro_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/equipmentAttributesLabel"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp" android:layout_marginEnd="16dp"/>
            <TextView
                    android:fontFamily="@font/cagliostro_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/equipmentAttributesTextView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/equipmentAttributesLabel"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>